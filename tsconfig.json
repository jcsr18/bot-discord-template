{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@errors/*": ["./src/errors/*"],
      "@discord-types/*": ["src/discord/types/*"],
      "@discord-events/*": ["src/discord/events/*"],
      "@discord-commands/*": ["src/discord/commands/*"],
      "@discord-contracts/*": ["src/discord/contracts/*"],
      "@discord-utils/*": ["src/discord/utils/*"],
      "@discord/*": ["src/discord/*"],
    }
  }
}